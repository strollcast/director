---
import { getSession } from '../lib/auth';

interface Props {
  title: string;
}

const { title } = Astro.props;
const session = await getSession(Astro);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Listen to research papers while you stroll" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Strollcast</title>
  </head>
  <body>
    <nav>
      <div class="nav-container">
        <a href="/" class="logo">ðŸš¶</a>
        <div class="nav-links">
          <a href="/">Episodes</a>
          <a href="/how-to">How It Works</a>
          {session ? (
            <>
              <a href="/submit" class="btn-submit-nav">Submit Paper</a>
              <div class="user-menu">
                <span class="user-name">{session.user?.name || session.user?.email}</span>
                <a href="/api/auth/signout" class="btn-signout">Sign Out</a>
              </div>
            </>
          ) : (
            <a href="/login" class="btn-signin">Sign In</a>
          )}
        </div>
      </div>
    </nav>
    <main>
      <slot />
    </main>
    <footer>
      <p>Knowledge is best absorbed in motion.</p>
      <p class="footer-links"><a href="/terms">Terms of Service</a></p>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --bg-primary: #0a0a0f;
    --bg-secondary: #12121a;
    --bg-card: #1a1a24;
    --text-primary: #e4e4e7;
    --text-secondary: #a1a1aa;
    --accent: #8b5cf6;
    --accent-hover: #a78bfa;
    --border: #27272a;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
    background: var(--bg-primary);
    color: var(--text-primary);
    line-height: 1.6;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  a {
    color: var(--accent);
    text-decoration: none;
    transition: color 0.2s;
  }

  a:hover {
    color: var(--accent-hover);
  }

  nav {
    background: var(--bg-secondary);
    border-bottom: 1px solid var(--border);
    padding: 1rem 2rem;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  .logo:hover {
    color: var(--accent);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-links a {
    color: var(--text-secondary);
    font-weight: 500;
  }

  .nav-links a:hover {
    color: var(--text-primary);
  }

  .user-menu {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .user-name {
    color: var(--text-secondary);
    font-size: 0.875rem;
  }

  .btn-submit-nav {
    background: var(--accent);
    color: white !important;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-weight: 500;
  }

  .btn-submit-nav:hover {
    background: var(--accent-hover);
    color: white !important;
  }

  .btn-signin {
    background: var(--bg-card);
    color: var(--text-primary) !important;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-weight: 500;
    border: 1px solid var(--border);
  }

  .btn-signin:hover {
    background: var(--bg-secondary);
    color: var(--text-primary) !important;
  }

  .btn-signout {
    color: var(--text-secondary) !important;
    font-size: 0.875rem;
  }

  .btn-signout:hover {
    color: var(--text-primary) !important;
  }

  main {
    flex: 1;
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem;
    width: 100%;
  }

  footer {
    background: var(--bg-secondary);
    border-top: 1px solid var(--border);
    padding: 2rem;
    text-align: center;
    color: var(--text-secondary);
    font-style: italic;
  }

  .footer-links {
    margin-top: 0.5rem;
    font-style: normal;
    font-size: 0.875rem;
  }

  .footer-links a {
    color: var(--text-secondary);
  }

  .footer-links a:hover {
    color: var(--text-primary);
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  h2 {
    font-size: 1.75rem;
    margin: 2rem 0 1rem;
    color: var(--text-primary);
  }

  h3 {
    font-size: 1.25rem;
    margin: 1.5rem 0 0.75rem;
    color: var(--text-primary);
  }

  p {
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  code {
    background: var(--bg-card);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  pre {
    background: var(--bg-card);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1rem 0;
  }

  pre code {
    background: none;
    padding: 0;
  }

  @media (max-width: 640px) {
    nav {
      padding: 1rem;
    }

    .nav-links {
      gap: 1rem;
    }

    main {
      padding: 2rem 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .user-menu {
      flex-direction: column;
      gap: 0.25rem;
    }
  }
</style>
