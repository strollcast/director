---
import Layout from '../layouts/Layout.astro';

interface Props {
  title: string;
  currentPage: 'episodes' | 'tools';
}

const { title, currentPage } = Astro.props;
---

<Layout title={title}>
  <div class="admin-wrapper">
    <div class="admin-content">
      <slot />
    </div>

    <nav class="admin-nav">
      <h3>Admin Menu</h3>
      <ul>
        <li>
          <a href="/admin/episodes" class:list={['nav-link', { active: currentPage === 'episodes' }]}>
            Episodes
          </a>
        </li>
        <li>
          <a href="/admin/tools" class:list={['nav-link', { active: currentPage === 'tools' }]}>
            Tools
          </a>
        </li>
      </ul>
    </nav>
  </div>
</Layout>

<style is:global>
  .admin-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 200px;
    gap: 2rem;
    padding: 2rem 1rem;
  }

  .admin-content {
    min-width: 0; /* Prevents grid blowout */
  }

  .admin-nav {
    position: sticky;
    top: 2rem;
    height: fit-content;
  }

  .admin-nav h3 {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .admin-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .admin-nav li {
    margin-bottom: 0.5rem;
  }

  .nav-link {
    display: block;
    padding: 0.5rem 1rem;
    color: var(--text-primary);
    text-decoration: none;
    border-radius: 6px;
    transition: background 0.2s, color 0.2s;
  }

  .nav-link:hover {
    background: var(--bg-card);
  }

  .nav-link.active {
    background: var(--accent);
    color: white;
  }

  @media (max-width: 768px) {
    .admin-wrapper {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .admin-nav {
      position: static;
      order: -1; /* Show nav above content on mobile */
    }

    .admin-nav ul {
      display: flex;
      gap: 0.5rem;
    }

    .admin-nav h3 {
      display: none;
    }
  }
</style>
