---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Episodes">
  <section class="intro">
    <p>
      Strollcast transforms dense academic papers into engaging audio podcasts.
      Inspired by <a href="https://notebooklm.google/" target="_blank" rel="noopener noreferrer">Google's NotebookLM</a>,
      each episode features a conversational format with two hosts breaking down
      complex concepts into accessible explanations—perfect for walks, commutes,
      or any time you're on the move.
    </p>
  </section>

  <section class="episodes">
    <h2>Recent Episodes</h2>
    <div id="episode-grid" class="episode-grid">
      <div class="loading">Loading episodes...</div>
    </div>
    <div class="view-all-container">
      <a href="/episodes" class="view-all-link">View all episodes →</a>
    </div>
  </section>

  <section class="testing">
    <h2>Help with Testing</h2>
    <p>
      We're looking for testers to help improve the Strollcast mobile apps. Get early access to new features and help shape the app's development.
    </p>
    <div class="testing-links">
      <a href="/support/android#testing" class="testing-link">
        <span class="platform">Android</span>
        <span class="description">Join the testers group on Google Play</span>
      </a>
      <a href="/support/ios#testing" class="testing-link">
        <span class="platform">iOS</span>
        <span class="description">Build from source with Xcode</span>
      </a>
    </div>
  </section>
</Layout>

<script>
  interface Episode {
    id: string;
    title: string;
    authors: string;
    year: number;
    duration: string;
    description: string;
    audioUrl: string;
    paperUrl: string | null;
    topics: string[];
  }

  async function loadRecentEpisodes() {
    const grid = document.getElementById('episode-grid');
    if (!grid) return;

    try {
      // Show loading state
      grid.innerHTML = '<div class="loading">Loading episodes...</div>';

      const response = await fetch('https://api.strollcast.com/episodes');
      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || 'Failed to fetch episodes');
      }

      // Only show first 3 episodes on home page
      const episodes: Episode[] = data.episodes.slice(0, 3);

      if (episodes.length === 0) {
        grid.innerHTML = '<div class="error">No episodes available.</div>';
        return;
      }

      grid.innerHTML = episodes.map(episode => `
        <article class="episode-card">
          <h3>${episode.title}</h3>
          <div class="episode-meta">
            <span class="authors">${episode.authors}</span>
            <span class="separator">•</span>
            <span class="year">${episode.year}</span>
            <span class="separator">•</span>
            <span class="duration">${episode.duration}</span>
          </div>
          <p class="description">${episode.description}</p>
          <div class="topics">
            ${episode.topics.map(topic => `<span class="topic">${topic}</span>`).join('')}
          </div>
          <audio controls preload="metadata" class="audio-player">
            <source src="${episode.audioUrl}" type="audio/mpeg" />
            Your browser does not support the audio element.
          </audio>
          <div class="episode-actions">
            ${episode.paperUrl ? `<a href="${episode.paperUrl}" class="btn btn-secondary" target="_blank" rel="noopener noreferrer">Read Paper</a>` : ''}
            <a href="${episode.audioUrl}" class="btn btn-secondary" download>Download</a>
          </div>
        </article>
      `).join('');
    } catch (error) {
      grid.innerHTML = '<div class="error">Failed to load episodes. Please try again later.</div>';
      console.error('Failed to fetch episodes:', error);
    }
  }

  // Load recent episodes on page load
  loadRecentEpisodes();
</script>

<style is:global>
  .hero {
    text-align: center;
    margin-bottom: 3rem;
  }

  .tagline {
    font-size: 1.25rem;
    color: var(--text-secondary);
  }

  .intro {
    max-width: 700px;
    margin: 0 auto 3rem;
    text-align: center;
  }

  .intro p {
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .episodes h2 {
    margin-bottom: 1.5rem;
  }

  .view-all-container {
    text-align: center;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .view-all-link {
    display: inline-block;
    padding: 0.875rem 1.5rem;
    background: var(--bg-card);
    border: 2px solid var(--accent);
    border-radius: 8px;
    color: var(--accent);
    font-weight: 500;
    font-size: 1rem;
    transition: all 0.2s;
  }

  .view-all-link:hover {
    background: var(--accent);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(139, 92, 246, 0.3);
  }

  .episode-grid {
    display: grid;
    gap: 1.5rem;
  }

  .loading, .error {
    text-align: center;
    padding: 3rem;
    color: var(--text-secondary);
  }

  .error {
    color: #ef4444;
  }

  .episode-card {
    background: var(--bg-card);
    border: 2px solid var(--accent);
    border-radius: 12px;
    padding: 1.5rem;
    transition: border-color 0.2s, transform 0.2s, box-shadow 0.2s;
  }

  .episode-card:hover {
    border-color: var(--accent-hover);
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(139, 92, 246, 0.2);
  }

  .episode-card h3 {
    margin: 0 0 0.5rem;
    font-size: 1.25rem;
    color: var(--text-primary);
  }

  .episode-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .episode-meta .authors {
    color: var(--accent);
    font-weight: 500;
    margin: 0;
  }

  .episode-meta .separator {
    color: var(--text-secondary);
  }

  .episode-meta .year,
  .episode-meta .duration {
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .description {
    margin-bottom: 1rem;
  }

  .topics {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .audio-player {
    width: 100%;
    margin-bottom: 1rem;
    border-radius: 8px;
  }

  .topic {
    font-size: 0.75rem;
    color: var(--text-secondary);
    border: 1px solid var(--border);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .episode-actions {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.25rem;
    border-radius: 8px;
    font-weight: 500;
    font-size: 0.875rem;
    transition: all 0.2s;
  }

  .btn-primary {
    background: var(--accent);
    color: white;
  }

  .btn-primary:hover {
    background: var(--accent-hover);
    color: white;
  }

  .btn-secondary {
    background: transparent;
    border: 1px solid var(--border);
    color: var(--text-primary);
  }

  .btn-secondary:hover {
    border-color: var(--accent);
    color: var(--accent);
  }

  @media (max-width: 640px) {
    .episode-actions {
      flex-direction: column;
    }

    .btn {
      text-align: center;
    }
  }

  .testing {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
    text-align: center;
  }

  .testing h2 {
    margin-bottom: 1rem;
  }

  .testing p {
    max-width: 600px;
    margin: 0 auto 1.5rem;
    color: var(--text-secondary);
  }

  .testing-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .testing-link {
    display: flex;
    flex-direction: column;
    padding: 1rem 1.5rem;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s;
    min-width: 200px;
  }

  .testing-link:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
  }

  .testing-link .platform {
    font-weight: 600;
    color: var(--accent);
    margin-bottom: 0.25rem;
  }

  .testing-link .description {
    font-size: 0.875rem;
    color: var(--text-secondary);
  }
</style>
