---
import Layout from '../layouts/Layout.astro';
---

<Layout title="All Episodes">
  <header>
    <h1>All Episodes</h1>
    <p class="subtitle">Browse and search through our complete podcast library</p>
  </header>

  <section class="episodes">
    <div class="search-container">
      <input
        type="search"
        id="search-input"
        class="search-input"
        placeholder="Search episodes by title or abstract..."
        autocomplete="off"
      />
      <div id="search-status" class="search-status"></div>
    </div>
    <div id="episode-grid" class="episode-grid">
      <div class="loading">Loading episodes...</div>
    </div>
  </section>
</Layout>

<script>
  interface Episode {
    id: string;
    title: string;
    authors: string;
    year: number;
    duration: string;
    description: string;
    audioUrl: string;
    paperUrl: string | null;
    topics: string[];
  }

  function debounce<T extends (...args: any[]) => any>(
    func: T,
    wait: number
  ): (...args: Parameters<T>) => void {
    let timeout: ReturnType<typeof setTimeout> | null = null;
    return function(...args: Parameters<T>) {
      if (timeout) clearTimeout(timeout);
      timeout = setTimeout(() => func(...args), wait);
    };
  }

  async function loadEpisodes(searchQuery?: string) {
    const grid = document.getElementById('episode-grid');
    const searchStatus = document.getElementById('search-status');
    if (!grid) return;

    try {
      // Show loading state
      grid.innerHTML = '<div class="loading">Loading episodes...</div>';
      if (searchStatus) searchStatus.textContent = '';

      const url = searchQuery
        ? `https://api.strollcast.com/search?q=${encodeURIComponent(searchQuery)}`
        : 'https://api.strollcast.com/episodes';

      const response = await fetch(url);
      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || 'Failed to fetch episodes');
      }

      const episodes: Episode[] = data.episodes;

      // Update search status
      if (searchStatus && searchQuery) {
        searchStatus.textContent = `Found ${data.count || episodes.length} episode${episodes.length !== 1 ? 's' : ''}`;
      }

      if (episodes.length === 0) {
        grid.innerHTML = searchQuery
          ? `<div class="error">No episodes found matching "${searchQuery}". Try a different search term.</div>`
          : '<div class="error">No episodes available.</div>';
        return;
      }

      grid.innerHTML = episodes.map(episode => `
        <article class="episode-card">
          <h3>${episode.title}</h3>
          <div class="episode-meta">
            <span class="authors">${episode.authors}</span>
            <span class="separator">•</span>
            <span class="year">${episode.year}</span>
            <span class="separator">•</span>
            <span class="duration">${episode.duration}</span>
          </div>
          <p class="description">${episode.description}</p>
          <div class="topics">
            ${episode.topics.map(topic => `<span class="topic">${topic}</span>`).join('')}
          </div>
          <audio controls preload="metadata" class="audio-player">
            <source src="${episode.audioUrl}" type="audio/mpeg" />
            Your browser does not support the audio element.
          </audio>
          <div class="episode-actions">
            ${episode.paperUrl ? `<a href="${episode.paperUrl}" class="btn btn-secondary" target="_blank" rel="noopener noreferrer">Read Paper</a>` : ''}
            <a href="${episode.audioUrl}" class="btn btn-secondary" download>Download</a>
          </div>
        </article>
      `).join('');
    } catch (error) {
      grid.innerHTML = '<div class="error">Failed to load episodes. Please try again later.</div>';
      console.error('Failed to fetch episodes:', error);
    }
  }

  // Handle search input
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  if (searchInput) {
    // Load initial query from URL if present
    const urlParams = new URLSearchParams(window.location.search);
    const initialQuery = urlParams.get('q');
    if (initialQuery) {
      searchInput.value = initialQuery;
      loadEpisodes(initialQuery);
    } else {
      loadEpisodes();
    }

    // Debounced search handler
    const handleSearch = debounce((query: string) => {
      const trimmedQuery = query.trim();

      // Update URL without reloading page
      const newUrl = new URL(window.location.href);
      if (trimmedQuery) {
        newUrl.searchParams.set('q', trimmedQuery);
      } else {
        newUrl.searchParams.delete('q');
      }
      window.history.pushState({}, '', newUrl);

      // Load episodes with search query
      loadEpisodes(trimmedQuery || undefined);
    }, 300);

    searchInput.addEventListener('input', (e) => {
      const target = e.target as HTMLInputElement;
      handleSearch(target.value);
    });
  } else {
    // Fallback: load all episodes if search input not found
    loadEpisodes();
  }
</script>

<style is:global>
  header {
    margin-bottom: 2rem;
  }

  .subtitle {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-top: 0.5rem;
  }

  .search-container {
    margin-bottom: 1.5rem;
  }

  .search-input {
    width: 100%;
    padding: 0.875rem 1rem;
    font-size: 1rem;
    border: 2px solid var(--border);
    border-radius: 8px;
    background: var(--bg-card);
    color: var(--text-primary);
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .search-input:focus {
    outline: none;
    border-color: var(--accent);
    box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
  }

  .search-input::placeholder {
    color: var(--text-secondary);
  }

  .search-status {
    margin-top: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    min-height: 1.25rem;
  }

  .episode-grid {
    display: grid;
    gap: 1.5rem;
  }

  .loading, .error {
    text-align: center;
    padding: 3rem;
    color: var(--text-secondary);
  }

  .error {
    color: #ef4444;
  }

  .episode-card {
    background: var(--bg-card);
    border: 2px solid var(--accent);
    border-radius: 12px;
    padding: 1.5rem;
    transition: border-color 0.2s, transform 0.2s, box-shadow 0.2s;
  }

  .episode-card:hover {
    border-color: var(--accent-hover);
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(139, 92, 246, 0.2);
  }

  .episode-card h3 {
    margin: 0 0 0.5rem;
    font-size: 1.25rem;
    color: var(--text-primary);
  }

  .episode-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .episode-meta .authors {
    color: var(--accent);
    font-weight: 500;
    margin: 0;
  }

  .episode-meta .separator {
    color: var(--text-secondary);
  }

  .episode-meta .year,
  .episode-meta .duration {
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .description {
    margin-bottom: 1rem;
  }

  .topics {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .audio-player {
    width: 100%;
    margin-bottom: 1rem;
    border-radius: 8px;
  }

  .topic {
    font-size: 0.75rem;
    color: var(--text-secondary);
    border: 1px solid var(--border);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .episode-actions {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.25rem;
    border-radius: 8px;
    font-weight: 500;
    font-size: 0.875rem;
    transition: all 0.2s;
  }

  .btn-primary {
    background: var(--accent);
    color: white;
  }

  .btn-primary:hover {
    background: var(--accent-hover);
    color: white;
  }

  .btn-secondary {
    background: transparent;
    border: 1px solid var(--border);
    color: var(--text-primary);
  }

  .btn-secondary:hover {
    border-color: var(--accent);
    color: var(--accent);
  }

  @media (max-width: 640px) {
    .episode-actions {
      flex-direction: column;
    }

    .btn {
      text-align: center;
    }
  }
</style>
